prefix=@CMAKE_INSTALL_PREFIX@
exec_prefix=@CMAKE_INSTALL_PREFIX@
includedir=@CMAKE_INSTALL_PREFIX@/include
libdir=@CMAKE_INSTALL_PREFIX@/lib
datadir=@CMAKE_INSTALL_PREFIX@/share

usage()
{
    cat <<EOF
Usage: lintel-config <OPTION>

Valid options:
  --cflags	       show needed compiler flags

  --libs	       show library link options

  --libtool-libs       obsolete
  --libtool-lintelgc   obsolete
  --libtool-lintelpthread obsolete
  --mustgclibs         obsolete
  --nogclibs           obsolete

  --features           show the features this version of lintel was built with
  --has-feature <feature> exit true (has feature) or false (does not have feature)
  --datadir            show the share directory lintel used for installation
  --help               show these options
  --version            show lintel version
EOF
exit 1
}

features=`echo "@LINTEL_FEATURES@" | sed 's/;/ /'`

case "$1" in
    --cflags)
    	echo "-I${includedir} -I@TCL_INCLUDE_PATH@"
	exit 0
    	;;
    --libs)
        if test $libdir = '/usr/lib'; then
	    echo "-lLintel @TCL_LIBRARY@"
        else
	    echo "-L$libdir -lLintel @TCL_LIBRARY@"
	fi
	exit 0
	;;
    --libtool-libs)
        $0 --libs
	;;
    --libtool-lintelgc)
        echo /no/such/file/no/support/for/lintel-config/--libtool-lintelgc
	exit 1
	;;
    --libtool-lintelpthread)
        echo "`$0 --libs` -lLintelPThread"
	exit 0
	;;
    --mustgclibs)
        echo /no/such/file/no/support/for/lintel-config/--mustgclibs
	exit 1
	;;
    --nogclibs)
        echo /no/such/file/no/support/for/lintel-config/--nogclibs
	exit 1
	;;
    --features)
        echo $features
	;;
    --has-feature)
        for i in $features; do
	    if test "$i" = "$2"; then
		exit 0
	    fi
	done
	exit 1
	;;
    --datadir)
        echo $datadir
	;;
    --help)
        usage
	;;
    --version)
    	echo @LINTEL_VERSION@;
    	exit 0
    	;;
    *)
        echo "unknown option $1"
	usage
	;;
esac
